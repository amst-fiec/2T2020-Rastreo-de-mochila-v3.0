<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="189dp"
            app:srcCompat="@drawable/bolsa" />

        <Button
            android:id="@+id/btn_verMaletas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="mostrarMaletas"
            android:text="Ver Mis Maletas" />

        <TextView
            android:id="@+id/txt_texto"
            android:layout_width="215dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="Elija un dispositivo activo:"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/lv_disp"
            android:layout_width="match_parent"
            android:layout_height="181dp" />

        <TextView
            android:id="@+id/txt_texto2"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="center"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_salir"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:onClick="Salir"
            android:text="SALIR" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>